{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": { 
          "distDir": "dist",
          "buildCommand": "cd frontend && npm run build"
        }
      },
      {
        "src": "backend/api/**/*.js",  
        "use": "@vercel/node"
      }
    ],
    "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/api/$1" },
    { "source": "/(.*)", "destination": "/dist" }
  ]
  }