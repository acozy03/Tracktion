{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": { 
          "distDir": "dist",
          "buildCommand": "cd frontend && npm run build"
        }
      },
      {
        "src": "backend/api/**/*.js",  
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/backend/api/$1" },
      { "src": "/assets/(.*)", "dest": "/frontend/dist/assets/$1" },
      { "src": "/(.*)", "dest": "/frontend/dist/index.html" }
    ]
  }